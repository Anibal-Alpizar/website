---
import Layout from "../../layouts/Layout.astro";
import Section from "../../components/commons/Section.astro";

import content from "../../data/inventory-management-system-for-non-profit.json";
---

<Layout title={content.title}>
  <main>
    <Section>
      <h1>
        {content.title.split("Hogar El Buen Samaritano")[0]}
        <a
          href="https://hogarbuensamaritano.org/"
          target="_blank"
          class="highlight-link"
        >
          Hogar El Buen Samaritano</a
        >
        {content.title.split("Hogar El Buen Samaritano")[1]}
      </h1>
      <span class="date">{content.date}</span>
      <p>{content.introduction}</p>

      {
        content.sections.map((section, index) => (
          <section class="content-section">
            <h2>{section.title}</h2>
            <p>{section.content}</p>
            {section.image && (
              <div class="image-container">
                <img
                  src={section.image}
                  alt={section.alt}
                  class={index === 1 ? "first-image" : ""}
                />
              </div>
            )}

            {section.bullets && (
              <ul class="bullet-list">
                {section.bullets.map((bullet) => (
                  <li>{bullet}</li>
                ))}
              </ul>
            )}
            {section.imageSource && (
              <p class="image-suggestion">{section.imageSource}</p>
            )}
          </section>
        ))
      }

      <section class="content-section">
        {
          content.sections.find((sec) => sec.title === "Mejoras Futuras") ? (
            <>
              <h2>
                {
                  content.sections.find(
                    (sec) => sec.title === "Mejoras Futuras"
                  )!.title
                }
              </h2>
              <p>
                {
                  content.sections.find(
                    (sec) => sec.title === "Mejoras Futuras"
                  )!.content
                }
              </p>
              <ul class="bullet-list">
                {(
                  content.sections.find(
                    (sec) => sec.title === "Mejoras Futuras"
                  )!.bullets || []
                ).map((bullet) => (
                  <li>{bullet}</li>
                ))}
              </ul>
            </>
          ) : null
        }
      </section>
    </Section>
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 2rem auto;
    line-height: 1.6;
  }

  h1 {
    font-size: 1.5rem;
    color: var(--text-main);
  }

  .highlight-link {
    text-decoration: underline;
    color: var(--text-main);
  }

  h2 {
    font-size: 1.3rem;
    margin-bottom: 0.75rem;
    color: var(--text-main);
  }

  p {
    margin-bottom: 1rem;
    color: var(--text-secondary);
  }

  .date {
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
    display: block;
    padding-top: 0.2rem;
  }

  .content-section {
    padding: 1rem;
    border-bottom: 1px solid var(--border-color);
  }

  .content-section:last-of-type {
    border-bottom: none;
  }

  .bullet-list {
    font-size: 0.9rem;
    color: var(--text-secondary);
    line-height: 1.5;
    padding-left: 1.5rem;
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
  }

  .bullet-list li {
    margin-bottom: 0.5rem;
    list-style-type: disc;
  }

  .image-suggestion {
    font-style: italic;
    color: var(--text-secondary);
    font-size: 0.7rem;
  }

  .first-image {
    max-height: 600px;
  }

  .image-container {
    margin: 1rem 0;
    text-align: center;
  }

  .image-container img {
    max-width: 100%;
    border-radius: 5px;
  }

  @media (max-width: 700px) {
    main {
      margin: 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    h2 {
      font-size: 1.5rem;
    }
  }
</style>
