---
const skills = [
  {
    category: "Frontend",
    items: ["React", "Next.js", "Astro", "TailwindCSS", "TypeScript"],
  },
  {
    category: "Backend",
    items: ["Node.js", "Express", "NestJS", "PostgreSQL", "MongoDB"],
  },
  {
    category: "Tools",
    items: ["Git", "Docker", "AWS", "Linux", "VS Code"],
  },
];
---

<div class="skills-section">
  <h2>Skills & Technologies</h2>
  <div class="skills-grid">
    {
      skills.map(({ category, items }) => (
        <div class="skill-category">
          <h3>{category}</h3>
          <ul>
            {items.map((item) => (
              <li>{item}</li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</div>

<style>
  .skills-section {
    margin-top: 3rem;
  }

  h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
    color: var(--text-main);
    -webkit-background-clip: text;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .skill-category {
    background: var(--card-background);
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .skill-category:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  [data-theme="dark"] .skill-category:hover {
    box-shadow: 0 4px 20px rgba(255, 255, 255, 0.1);
  }

  h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: var(--text-secondary);
  }

  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  li {
    background: var(--background);
    color: var(--text-secondary);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  li:hover {
    transform: translateY(-2px);
    color: var(--text-main);
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
