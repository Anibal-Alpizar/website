---
import Card from "../commons/Card.astro";
import Badge from "../commons/Badge.astro";

import {
  ReactIcon,
  NextJSIcon,
  AngularIcon,
  TailwindCSSIcon,
  TypeScriptIcon,
  NodeJSIcon,
  ExpressIcon,
  NestJSIcon,
  PostgreSQLIcon,
  MongoDBIcon,
  GitIcon,
  DockerIcon,
  AWSIcon,
  LinuxIcon,
  VSCodeIcon,
} from "../../icons";

const ICONS = {
  React: ReactIcon,
  "Next.js": NextJSIcon,
  Angular: AngularIcon,
  TailwindCSS: TailwindCSSIcon,
  TypeScript: TypeScriptIcon,
  "Node.js": NodeJSIcon,
  Express: ExpressIcon,
  NestJS: NestJSIcon,
  PostgreSQL: PostgreSQLIcon,
  MongoDB: MongoDBIcon,
  Git: GitIcon,
  Docker: DockerIcon,
  AWS: AWSIcon,
  Linux: LinuxIcon,
  "VS Code": VSCodeIcon,
};

type IconKeys = keyof typeof ICONS;

const skills: { category: string; items: IconKeys[] }[] = [
  {
    category: "Frontend",
    items: ["React", "Next.js", "Angular", "TailwindCSS", "TypeScript"],
  },
  {
    category: "Backend",
    items: ["Node.js", "Express", "NestJS", "PostgreSQL", "MongoDB"],
  },
  {
    category: "Tools",
    items: ["Git", "Docker", "AWS", "Linux", "VS Code"],
  },
];
---

<div class="skills-section">
  <h2>Skills & Technologies</h2>
  <div class="skills-grid">
    {
      skills.map(({ category, items }) => (
        <Card>
          <h3>{category}</h3>
          <div class="skills-list">
            {items.map((item) => {
              const Icon = ICONS[item];
              return (
                <Badge>
                  {Icon && <Icon />}
                  <span>{item}</span>
                </Badge>
              );
            })}
          </div>
        </Card>
      ))
    }
  </div>
</div>

<style>
  .skills-section {
    margin-top: 3rem;
  }

  h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
    color: var(--text-main);
    -webkit-background-clip: text;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: var(--text-main);
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
