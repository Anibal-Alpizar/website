---
import Card from "../commons/Card.astro";
import Badge from "../commons/Badge.astro";
import {
  ReactIcon,
  NextJSIcon,
  AngularIcon,
  TailwindCSSIcon,
  TypeScriptIcon,
  NodeJSIcon,
  ExpressIcon,
  NestJSIcon,
  PostgreSQLIcon,
  MongoDBIcon,
  GitIcon,
  DockerIcon,
  AWSIcon,
  LinuxIcon,
  VSCodeIcon,
  JavaIcon,
  CSIcon,
  BashIcon,
  JavaScriptIcon,
  BootstrapIcon,
  SQLIcon,
  SQLiteIcon,
  MySQLIcon,
  RedisIcon,
  ShadcnUIIcon,
  DrizzleIcon,
  jQueryIcon,
  JWTIcon,
  RadixIcon,
  ReactRouterIcon,
  ReduxIcon,
  StyledComponentsIcon,
  ZodIcon,
  FigmaIcon,
  ReactQueryIcon,
  T3StackIcon,
  DigitalOceanIcon,
  HerokuIcon,
  KubernetesIcon,
  NeovimIcon,
  NotionIcon,
  ObsidianIcon,
  PostmanIcon,
  RailwayIcon,
  VisualStudioIcon,
  SwaggerIcon,
  VimIcon,
  VercelIcon,
} from "../../icons";

const ICONS = {
  React: ReactIcon,
  "Next.js": NextJSIcon,
  Angular: AngularIcon,
  TailwindCSS: TailwindCSSIcon,
  TypeScript: TypeScriptIcon,
  "Node.js": NodeJSIcon,
  Express: ExpressIcon,
  NestJS: NestJSIcon,
  PostgreSQL: PostgreSQLIcon,
  MongoDB: MongoDBIcon,
  Git: GitIcon,
  Docker: DockerIcon,
  AWS: AWSIcon,
  Linux: LinuxIcon,
  "VS Code": VSCodeIcon,
  Java: JavaIcon,
  "C#": CSIcon,
  Bash: BashIcon,
  JavaScript: JavaScriptIcon,
  Bootstrap: BootstrapIcon,
  SQL: SQLIcon,
  SQLite: SQLiteIcon,
  MySQL: MySQLIcon,
  Redis: RedisIcon,
  "Shadcn UI": ShadcnUIIcon,
  Drizzle: DrizzleIcon,
  jQuery: jQueryIcon,
  JWT: JWTIcon,
  Radix: RadixIcon,
  "React Router": ReactRouterIcon,
  Redux: ReduxIcon,
  "Styled Components": StyledComponentsIcon,
  Zod: ZodIcon,
  Figma: FigmaIcon,
  "React Query": ReactQueryIcon,
  "T3 Stack": T3StackIcon,
  "Digital Ocean": DigitalOceanIcon,
  Heroku: HerokuIcon,
  Kubernetes: KubernetesIcon,
  Neovim: NeovimIcon,
  Notion: NotionIcon,
  Obsidian: ObsidianIcon,
  Postman: PostmanIcon,
  Railway: RailwayIcon,
  "Visual Studio": VisualStudioIcon,
  Swagger: SwaggerIcon,
  Vim: VimIcon,
  Vercel: VercelIcon,
};

type IconKeys = keyof typeof ICONS;

const skills: { category: string; items: IconKeys[] }[] = [
  {
    category: "Frontend & Libraries",
    items: [
      "React",
      "Next.js",
      "Angular",
      "TailwindCSS",
      "Bootstrap",
      "Shadcn UI",
      "Radix",
      "React Router",
      "Redux",
      "Styled Components",
      "Zod",
      "Figma",
      "React Query",
      "T3 Stack",
    ],
  },
  {
    category: "Backend & Libraries",
    items: ["Node.js", "Express", "NestJS", "Drizzle", "jQuery", "JWT", "Zod"],
  },
  {
    category: "Programming Languages",
    items: ["TypeScript", "Java", "C#", "Bash", "JavaScript"],
  },
  {
    category: "Databases",
    items: ["PostgreSQL", "MongoDB", "SQL", "SQLite", "MySQL", "Redis"],
  },
  {
    category: "Tools & DevOps",
    items: [
      "Git",
      "Docker",
      "AWS",
      "Linux",
      "VS Code",
      "Digital Ocean",
      "Heroku",
      "Kubernetes",
      "Neovim",
      "Notion",
      "Obsidian",
      "Postman",
      "Railway",
      "Visual Studio",
      "Swagger",
      "Vim",
      "Vercel",
    ],
  },
];
---

<div class="skills-section">
  <h2>Skills & Technologies</h2>
  <div class="skills-grid">
    {
      skills.map(({ category, items }) => (
        <Card class={category === "Tools & DevOps" ? "tools-card" : ""}>
          <h3>{category}</h3>
          <div class="skills-list">
            {items.map((item) => {
              const Icon = ICONS[item];
              return (
                <Badge>
                  {Icon && <Icon />}
                  <span>{item}</span>
                </Badge>
              );
            })}
          </div>
        </Card>
      ))
    }
  </div>
</div>

<style>
  .skills-section {
    margin-top: 3rem;
  }

  h2 {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.8rem;
    color: var(--text-main);
    -webkit-background-clip: text;
  }

  .skills-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5rem;
  }

  .tools-card {
    grid-column: 1 / -1;
    max-width: 600px;
    margin: 0 auto;
  }

  h3 {
    font-size: 1.2rem;
    margin-bottom: 0.5rem;
    color: var(--text-main);
  }

  .skills-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  @media (max-width: 768px) {
    .skills-grid {
      grid-template-columns: 1fr;
    }

    .tools-card {
      grid-column: auto;
      max-width: none;
    }
  }
</style>
