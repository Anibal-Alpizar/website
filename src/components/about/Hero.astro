---
import { basics } from '../../data/cv.json'
import Section from '../commons/Section.astro'
import WorldMap from '../../icons/WorldMap.astro'

const { label, location, summary } = basics
const { city, region } = location
---

<Section>
  <div class="container">
    <div class="info">
      <h2>{label}</h2>
      <span>
        <WorldMap />
        {city}, {region}
      </span>
    </div>
  </div>
  <div class="summary">
    {summary.map((paragraph) => <p>{paragraph}</p>)}
  </div>
</Section>

<style>
  .container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
  }

  .info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding-right: 32px;
  }

  h1 {
    font-size: 2rem;
  }

  h2 {
    color: #444;
    font-weight: 500;
    font-size: 1.1rem;
    text-wrap: balance;
  }

  span {
    color: #666;
    display: flex;
    justify-content: flex-start;
    gap: 0.25rem;
    font-size: 0.85rem;
    letter-spacing: -0.05rem;
  }

  .summary {
    margin-top: 2rem;
  }

  .summary p {
    color: #666;
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
  }

  @media (width <= 700px) {
    .container {
      flex-direction: column-reverse;
    }

    .info {
      justify-content: center;
      align-items: center;
      padding-right: 0;
      text-align: center;
    }

    figure {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    h2 {
      text-wrap: balance;
    }

    figure {
      margin: 0 auto;
    }
  }
</style>
