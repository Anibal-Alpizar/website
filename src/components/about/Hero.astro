---
import { basics } from "../../data/cv.json";
import Section from "../commons/Section.astro";
import WorldMap from "../../icons/WorldMap.astro";
import Skills from "./Skills.astro";
import Social from "./Social.astro";
import { DownloadIcon } from "../../icons";

const { label, location, summary } = basics;
const { city, region } = location;
---

<div class="about-container">
  <Section>
    <div class="hero-content">
      <div class="intro-section">
        <h1>About Me</h1>
        <div class="location">
          <WorldMap />
          <span>{city}, {region}</span>
        </div>
        <p class="label">{label}</p>
        <a href="/AnÃ­bal_CV.pdf" download class="download-cv">
          Download CV
          <DownloadIcon />
        </a>
      </div>
      <Skills />
      <Social />
    </div>
  </Section>
</div>

<style>
  .about-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .intro-section {
    text-align: center;
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: var(--text-main);
    -webkit-background-clip: text;
    margin-bottom: 1rem;
  }

  .location {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .label {
    font-size: 1.1rem;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .download-cv {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1.5rem;
    padding: 0.75rem 1.5rem;
    background-color: var(--button-background);
    color: var(--button-text);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    font-size: 0.9rem;
    transition: all 0.3s ease;
  }

  .download-cv:hover {
    background-color: var(--button-hover-background);
    transform: translateY(-2px);
  }

  .summary-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .summary-card {
    background: var(--card-background);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--border-color);
    transition: all 0.3s ease;
  }

  .summary-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  [data-theme="dark"] .summary-card:hover {
    box-shadow: 0 4px 20px rgba(255, 255, 255, 0.1);
  }

  .summary-card p {
    font-size: 1rem;
    line-height: 1.7;
  }

  @media (max-width: 768px) {
    .summary-grid {
      grid-template-columns: 1fr;
    }

    h1 {
      font-size: 2rem;
    }

    .label {
      font-size: 1rem;
    }
  }
</style>
