---
import ThemeToggle from "../ThemeToggle.astro"
import { basics } from "../../data/cv.json"
import { GithubIcon, CommandIcon } from "../../icons"

const { profiles } = basics
const githubProfile = profiles.find((profile) => profile.network === "GitHub")
---

<nav class="navbar">
  <div class="navbar-content">
    <div class="nav-left">
      <a href="/" class="nav-link">Home</a>
      <a href="/about" class="nav-link">About</a>
    </div>
    <div class="nav-right">
      <button id="open-command-palette" class="command-button">
        <CommandIcon />
        <span>K</span>
      </button>
      {
        githubProfile && (
          <a
            href={githubProfile.url}
            target="_blank"
            rel="noopener noreferrer"
            class="github-link"
            title="Visit my GitHub profile"
          >
            <GithubIcon />
          </a>
        )
      }
      <ThemeToggle />
    </div>
  </div>
</nav>

<style>
  .navbar {
    padding: 1rem 2rem;
    border-bottom: 1px solid var(--border-color);
    background-color: var(--card-background);
    transition: all 0.3s ease;
  }

  .navbar-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-left,
  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-link {
    color: var(--text-main);
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .nav-link:hover {
    color: var(--text-secondary);
  }

  .github-link {
    color: var(--text-main);
    display: flex;
    align-items: center;
    transition: color 0.3s ease;
  }

  .github-link:hover {
    color: var(--text-secondary);
  }

  .command-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.4rem 0.6rem;
    font-size: 0.8rem;
    color: var(--text-main);
    background: var(--card-background);
    border: 1px solid var(--border-color);
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .command-button:hover {
    background: var(--hover-background);
  }

  @media (max-width: 700px) {
    .navbar {
      padding: 1rem;
    }
  }
</style>
