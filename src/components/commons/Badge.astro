---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={`badge ${className}`}>
  <slot />
</div>

<style>
  .badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--background);
    color: var(--text-secondary);
    padding: 0.5rem 0.75rem;
    border-radius: 20px;
    font-size: 0.85rem;
    border: 1px solid var(--border-color);
  }
</style>