---
import { DownloadIcon } from "../../icons";

interface Props {
  downloads: number;
}

const { downloads } = Astro.props;
---

<span class="downloads-badge">
  <span class="downloads-icon">
    <DownloadIcon />
  </span>
  <span class="downloads-count">{downloads}+</span>
</span>

<style>
  .downloads-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.25rem 0.5rem;
    background-color: var(--card-background);
    border: 1px solid var(--border-color);
    border-radius: 9999px;
    font-size: 0.75rem;
  }

  .downloads-icon {
    color: var(--button-hover-background);
  }

  .downloads-count {
    color: var(--text-secondary);
  }
</style>
