---
import Section from '../commons/Section.astro'
import { work } from '../../data/cv.json'
---

<Section>
  <ol class="timeline">
    {
      work.map(({ name, endDate, position }) => {
        const endYear =
          endDate != null ? new Date(endDate).getFullYear() : 'Current'
        const slug = name.toLowerCase().replace(/\s+/g, '-')

        return (
          <li class="timeline-item" tabindex="0">
            <div class="timeline-marker" />
            <time class="timeline-date">{endYear}</time>
            <h3 class="timeline-title">{name}</h3>
            <p class="timeline-position">{position}</p>
            <a href={`/${endYear}/${slug}`} class="read-more">
              Read more
            </a>
          </li>
        )
      })
    }
  </ol>
</Section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.timeline-item').forEach((item) => {
      item.addEventListener('click', () => {
        const readMoreElement = item.querySelector('.read-more')
        if (readMoreElement) {
          const url = readMoreElement.getAttribute('href')
          if (url) window.location.href = url
        }
      })
    })
  })
</script>

<style>
  .timeline {
    list-style: none;
    padding: 0;
    position: relative;
    border-left: 2px solid #ddd;
  }

  .timeline-item {
    position: relative;
    margin-bottom: 20px;
    padding-left: 30px;
    cursor: pointer;
  }

  .timeline-marker {
    position: absolute;
    left: -7px;
    top: 5px;
    width: 14px;
    height: 14px;
    background-color: #ddd;
    border-radius: 50%;
    border: 2px solid #fff;
  }

  .timeline-date {
    margin-bottom: 5px;
    font-size: 0.85rem;
    color: #777;
  }

  .timeline-title {
    font-size: 1rem;
    font-weight: bold;
    color: #333;
    margin: 0 0 5px;
  }

  .timeline-position {
    font-size: 0.85rem;
    color: #555;
  }

  .read-more {
    font-size: 0.85rem;
    color: #333;
    text-decoration: none;
  }

  .read-more:hover {
    text-decoration: underline;
  }

  .timeline-item:hover {
    background-color: #f5f5f5;
  }

  @media (max-width: 700px) {
    .timeline-item {
      padding-left: 20px;
    }
  }
</style>
