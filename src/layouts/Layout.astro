---
import Navbar from "../components/navbar/Navbar.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={`Aníbal Alpizar is a software engineer and web developer based in Costa Rica. ${title}`}
    />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="Aníbal Alpizar is a software engineer and web developer based in Costa Rica."
    />
    <meta property="og:image" content="/logo.jpg" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Aníbal Alpizar is a software engineer and web developer based in Costa Rica."
    />
    <meta name="twitter:image" content="/logo.jpg" />
    <link rel="icon" type="image/jpg" href="/logo.jpg" />
    <meta name="generator" content={Astro.generator} />
    <script is:inline>
      const theme = (() => {
        if (
          typeof localStorage !== "undefined" &&
          localStorage.getItem("theme")
        ) {
          return localStorage.getItem("theme");
        }
        if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
          return "dark";
        }
        return "light";
      })();
      document.documentElement.setAttribute("data-theme", theme);
    </script>
  </head>
  <body>
    <Navbar />
    <main>
      <slot />
    </main>
  </body>
</html>

<style is:global>
  :root {
    --background: #FAFAFA;
    --text-main: #1f2937;
    --text-secondary: #666;
    --border-color: #ddd;
    --card-background: #FFFFFF;
    --hover-background: #e5e7eb;
    --technical-card-bg: #f8f9fa;
    --card-hover-light: rgba(0, 0, 0, 0.1);
    --card-hover-dark: rgba(255, 255, 255, 0.15);
    --card-border-hover: rgba(0, 0, 0, 0.15);
    --card-border-hover-dark: rgba(255, 255, 255, 0.2);
  }

  [data-theme="dark"] {
    --background: #000000;
    --text-main: #e5e7eb;
    --text-secondary: #a3a3a3;
    --border-color: #333;
    --card-background: #0a0a0a;
    --hover-background: #2a2a2a;
    --technical-card-bg: #2d2d2d;
  }

  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      "Courier New",
      Courier,
      monospace;
    background: var(--background);
    letter-spacing: -0.025rem;
    transition: background-color 0.3s ease;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  a {
    text-decoration: none;
    color: var(--text-main);
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    color: var(--text-main);
  }

  p {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
    text-wrap: pretty;
  }

  .print {
    display: none !important;
  }

  .technical-details {
    background-color: var(--technical-card-bg) !important;
    border-color: var(--border-color) !important;
    transition:
      background-color 0.3s ease,
      border-color 0.3s ease;
  }

  @media print {
    .no-print {
      display: none !important;
    }

    .print {
      display: block !important;
    }

    astro-dev-toolbar {
      display: none !important;
    }

    article {
      break-inside: avoid;
    }
  }

  @media (max-width: 700px) {
    main {
      padding: 1rem;
    }
  }
</style>
